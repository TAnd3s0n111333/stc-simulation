{
  "type": "object",
  "title": "Single Mission Schema",
  "required": ["id", "environment", "description", "duration_hours", "requirements"],
  "properties": {
    "id": { 
      "type": "string",
      "description": "Unique identifier for the mission."
    },
    "environment": { 
      "type": "string", 
      "description": "The ID of the environment where the mission takes place (e.g., mars_surface)."
    },
    "description": { "type": "string" },
    "duration_hours": { "type": "number" },
    "requirements": {
      "type": "object",
      "description": "Dynamic keys for different mission requirements.",
      "additionalProperties": {
        "type": "object",
        "required": ["metric"],
        "properties": {
          "metric": { "type": "string" },
          "minimum": { "type": "number" },
          "maximum": { "type": "number" }
        },
        "oneOf": [
          { "required": ["minimum"] },
          { "required": ["maximum"] }
        ]
      }
    }
  },
  "additionalProperties": false
}